<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:paddingHorizontal="24dp"
    android:paddingTop="32dp"
    android:paddingBottom="16dp"
    android:gravity="center_vertical">

    <!-- 顶部信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvQuestionNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第1题/共5题"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />
    </LinearLayout>

    <!-- 题目卡片 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="题目"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="题目加载中..."
                android:textSize="20sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp" />

        <!-- 选项区域 -->
        <TextView
            android:id="@+id/tvQuestionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单选题"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择答案："
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp" />

        <!-- 单选题和多选题的选项列表 -->
        <LinearLayout
            android:id="@+id/llOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- 选项A -->
            <LinearLayout
            android:id="@+id/llOptionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#E3F2FD"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

                <RadioButton
                    android:id="@+id/rbOptionA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:buttonTint="#1976D2" />

                <CheckBox
                    android:id="@+id/cbOptionA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:buttonTint="#1976D2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvOptionA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A. 选项A"
                    android:textSize="16sp"
                    android:textColor="#1976D2" />
            </LinearLayout>

            <!-- 选项B -->
            <LinearLayout
            android:id="@+id/llOptionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#E3F2FD"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

                <RadioButton
                    android:id="@+id/rbOptionB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:buttonTint="#1976D2" />

                <CheckBox
                    android:id="@+id/cbOptionB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:buttonTint="#1976D2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvOptionB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B. 选项B"
                    android:textSize="16sp"
                    android:textColor="#1976D2" />
            </LinearLayout>

            <!-- 选项C -->
            <LinearLayout
            android:id="@+id/llOptionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#E3F2FD"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

                <RadioButton
                    android:id="@+id/rbOptionC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:buttonTint="#1976D2" />

                <CheckBox
                    android:id="@+id/cbOptionC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:buttonTint="#1976D2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvOptionC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C. 选项C"
                    android:textSize="16sp"
                    android:textColor="#1976D2" />
            </LinearLayout>

            <!-- 选项D -->
            <LinearLayout
            android:id="@+id/llOptionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#E3F2FD"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

                <RadioButton
                    android:id="@+id/rbOptionD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:buttonTint="#1976D2" />

                <CheckBox
                    android:id="@+id/cbOptionD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:buttonTint="#1976D2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvOptionD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D. 选项D"
                    android:textSize="16sp"
                    android:textColor="#1976D2" />
            </LinearLayout>
        </LinearLayout>

        <!-- 判断题选项 -->
        <LinearLayout
            android:id="@+id/llJudgeOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <!-- 对选项 -->
            <LinearLayout
            android:id="@+id/llJudgeTrue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#E3F2FD"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

                <RadioButton
                    android:id="@+id/rbJudgeTrue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:buttonTint="#1976D2" />

                <TextView
                    android:id="@+id/tvJudgeTrue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="对"
                    android:textSize="16sp"
                    android:textColor="#1976D2" />
            </LinearLayout>

            <!-- 错选项 -->
            <LinearLayout
            android:id="@+id/llJudgeFalse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#E3F2FD"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

                <RadioButton
                    android:id="@+id/rbJudgeFalse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:buttonTint="#1976D2" />

                <TextView
                    android:id="@+id/tvJudgeFalse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="错"
                    android:textSize="16sp"
                    android:textColor="#1976D2" />
            </LinearLayout>
        </LinearLayout>

        <!-- 提交答案按钮 -->
        <Button
            android:id="@+id/btnSubmitAnswer"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="提交答案"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="20dp" />



        <!-- 结果提示 -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择一个答案"
            android:textSize="17sp"
            android:textColor="#FF9800"
            android:gravity="center"
            android:padding="12dp"
            android:background="#FFF3E0"
            android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

    <!-- 底部导航栏 + 上传按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:paddingVertical="8dp"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:text="上一题"
            android:textSize="15sp"
            app:backgroundTint="#BDBDBD"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnShowWrong"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:text="错题"
            android:textSize="15sp"
            app:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:text="下一题"
            android:textSize="15sp"
            app:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <!-- ★ 新增上传题库按钮 -->
        <Button
            android:id="@+id/btnUpload"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:text="上传"
            android:textSize="15sp"
            app:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>