<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

    <!-- 顶部标题 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        app:title="@string/practice_mode"
        app:titleTextColor="@color/black"
        app:titleCentered="true" />

    <!-- 练习模式选项 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- 顺序练习 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sequential_practice"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sequential_practice_desc"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_sequential_practice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/start_practice"
                        android:textSize="16sp"
                        android:backgroundTint="@color/primary_color"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 随机练习 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/random_practice"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/random_practice_desc"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_random_practice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/start_practice"
                        android:textSize="16sp"
                        android:backgroundTint="@color/primary_color"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 模拟考试 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/simulation_exam"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/simulation_exam_desc"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_simulation_exam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/start_exam"
                        android:textSize="16sp"
                        android:backgroundTint="@color/primary_color"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 专项练习 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/special_practice"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/special_practice_desc"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_special_practice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/start_practice"
                        android:textSize="16sp"
                        android:backgroundTint="@color/primary_color"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 错题本 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wrong_questions"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wrong_questions_desc"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_wrong_questions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_wrong_questions"
                        android:textSize="16sp"
                        android:backgroundTint="@color/primary_color"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</layout>