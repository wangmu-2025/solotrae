<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 考试时间 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="考试时间"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvExamTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023-05-20 14:30:00"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 题库标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="题库标题"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvQuestionBankTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="模拟考试题库"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 得分 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="得分"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="80"
                android:textSize="48sp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- 考试结果 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="考试结果"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="通过"
                android:textSize="24sp"
                android:textColor="@color/success_color"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- 答题情况统计 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="答题情况"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- 总题数 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="总题数"
                    android:textSize="14sp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tvTotalQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 正确题数 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="正确题数"
                    android:textSize="14sp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tvCorrectQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="16sp"
                    android:textColor="@color/success_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 错误题数 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="错误题数"
                    android:textSize="14sp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tvWrongQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="16sp"
                    android:textColor="@color/error_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 正确率 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="正确率"
                    android:textSize="14sp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tvCorrectRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80.0%"
                    android:textSize="16sp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 用时 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="用时"
                    android:textSize="14sp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tvUsedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30:00"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>