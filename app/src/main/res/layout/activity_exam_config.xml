<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:paddingHorizontal="24dp"
    android:paddingTop="32dp"
    android:paddingBottom="16dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="考试参数设置"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- 考试时间设置 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考试时间（分钟）"
            android:textSize="16sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etExamTime"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="number"
            android:hint="请输入考试时间（1-300分钟）"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#E0E0E0"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="4dp"
            android:maxLength="3"
            app:backgroundTint="#E0E0E0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建议设置为15-120分钟"
            android:textSize="12sp"
            android:textColor="#9E9E9E" />
    </LinearLayout>

    <!-- 及格分数设置 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="及格分数"
            android:textSize="16sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPassingScore"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="number"
            android:hint="请输入及格分数"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#E0E0E0"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="4dp"
            android:maxLength="3"
            app:backgroundTint="#E0E0E0" />
    </LinearLayout>

    <!-- 分数类型选择 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分数类型"
            android:textSize="16sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/rgScoreType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbPercentage"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="百分比（%）"
                android:textSize="16sp"
                android:textColor="#333333"
                android:checked="true"
                android:buttonTint="#1976D2"
                android:paddingHorizontal="16dp" />

            <RadioButton
                android:id="@+id/rbScoreValue"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="分数值（分）"
                android:textSize="16sp"
                android:textColor="#333333"
                android:buttonTint="#1976D2"
                android:paddingHorizontal="16dp" />
        </RadioGroup>
    </LinearLayout>

    <!-- 开始考试按钮 -->
    <Button
        android:id="@+id/btnStartExam"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="开始考试"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#4CAF50"
        android:layout_gravity="bottom"
        android:elevation="4dp" />

</LinearLayout>